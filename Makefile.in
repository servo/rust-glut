VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CXXFLAGS ?=
AR ?= ar
RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all:	librustglut.dummy

%.o:	%.c
	$(CC) $< -o $@ -c $(CFLAGS)

librustglut.dummy: glut.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@
	touch $@

rustglut-test: glut.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustglut-test
	./rustglut-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test

